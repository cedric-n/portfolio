{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('show') }}
{% endblock %}

{% block title %}Realisation{% endblock %}

{% block body %}
    <h1>Realisation: {{ realisation.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ realisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ realisation.name }}</td>
            </tr>
            <tr>
                <th>Image Upload</th>
                <td><img src="{{ vich_uploader_asset(realisation, 'posterFile', 'App\\Entity\\Realisation') }}" alt="{{ realisation.name }}"></td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ realisation.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ realisation.description }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td class="d-flex w-100" colspan="2">
                    <a class="btn btn-warning mx-2" href="{{ path('realisation_edit', {'id': realisation.id}) }}">edit</a>

                    {{ include('realisation/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">

    </div>

    <a href="{{ path('realisation_index') }}">back to list</a>
{% endblock %}
